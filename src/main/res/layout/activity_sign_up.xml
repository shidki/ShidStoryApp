<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.SignUpActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_gambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/yuna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:alpha="0"
        tools:alpha="100"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/judul_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        tools:alpha="100"
        android:text="DAFTAR"
        app:layout_constraintTop_toBottomOf="@+id/logo_gambar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@+id/judul_app"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/input_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:alpha="0"
        tools:alpha="100"
        android:paddingLeft="13dp"
        android:hint="Masukkan Email"
        app:layout_constraintTop_toBottomOf="@id/label_email"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/label_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@+id/input_email"
        app:layout_constraintStart_toStartOf="@+id/input_email"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/input_nama"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="13dp"
        android:alpha="0"
        tools:alpha="100"
        android:hint="Masukkan Nama"
        app:layout_constraintTop_toBottomOf="@id/label_nama"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/baseline_person_2_24"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@+id/input_nama"
        app:layout_constraintStart_toStartOf="@+id/input_nama"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/input_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:alpha="0"
        tools:alpha="100"
        android:password="true"
        android:drawableEnd="@drawable/sembunyikan"
        android:paddingRight="10dp"
        android:paddingLeft="13dp"
        android:hint="Masukkan Password"
        app:layout_constraintTop_toBottomOf="@id/label_password"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/label_confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Password"
        android:alpha="0"
        tools:alpha="100"
        app:layout_constraintTop_toBottomOf="@+id/input_password"
        app:layout_constraintStart_toStartOf="@+id/input_password"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/input_confirmpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:password="true"
        android:alpha="0"
        tools:alpha="100"
        android:drawableEnd="@drawable/sembunyikan"
        android:paddingRight="10dp"
        android:paddingLeft="13dp"
        android:hint="Masukkan Password"
        app:layout_constraintTop_toBottomOf="@id/label_confirmpassword"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/password"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:alpha="0"
        tools:alpha="100"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/input_confirmpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DAFTAR"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:id="@+id/containerLogin"
        android:layout_width="wrap_content"
        android:alpha="0"
        tools:alpha="100"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun? "
            android:textSize="15sp"
 />
        <TextView
            android:id="@+id/btn_login"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#0A51FF"
            android:textSize="15sp"
 />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>